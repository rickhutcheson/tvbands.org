{% extends 'partials/_base.twig' %}
{% block content %}
    <h2>{{ event.name }} | <a href="{{ asset(event.itinerary, 'files') }}">Itinerary</a></h2>
    <hr>
    <h5>{{ event.date|localedatetime('%A %B %e')}}</h5>

    {% set location = record.related('locations')|first %}
    {% if location %}
        <h5>{{ location.name }}</h5>
        <h5>{{ location.address }}</h5>
        <iframe width="600" height="450" frameborder="0" style="border:0"
                src="https://www.google.com/maps/embed/v1/place?q={{ location.address }}&key={{ app.config.get('general/third_party/google_maps_key') }}" allowfullscreen>Loading Map...</iframe>
    {% endif %}
{% endblock %}
