{% extends 'partials/_base.twig' %}
{% block content %}
    {% setcontent upcoming = 'events' where { date: '>today' } limit 5 %}
    {{ include ('partials/_event_list.twig', { list_title: 'Upcoming Events', events: upcoming }) }}
    {% setcontent news = 'news' limit 5 orderby '-date' %}
    {{ include ('partials/_news_list.twig', { list_title: 'Recent News', news: news }) }}
{% endblock %}
